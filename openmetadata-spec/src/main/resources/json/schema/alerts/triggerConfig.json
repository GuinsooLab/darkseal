      "javaType": "org.openmetadata.schema.entity.alerts.TriggerConfig",
      "properties": {
        "type": {
          "$ref": "#/definitions/alertTriggerType"
        },
        "entities": {
          "description": "Endpoint to receive the webhook events over POST requests.",
          "type": "array",
          "items": {
            "type" : "string"
          },
          "uniqueItems": true
